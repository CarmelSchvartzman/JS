$("#addComment").click(function() {
    if(typeof TinyMCE === "undefined") {       <<<<<<<<<<<<<<<<<<<<<<<<
        $.ajax({
            url: "tinymce.js",
            dataType: "script",        <<<<<<<<<<<<<<<<<<<<<<<<
            cache: true,              <<<<<<<<<<<<<<<<<<<<<<<<
            success: function() {
                TinyMCE.init();
            }
        });
    }
});
